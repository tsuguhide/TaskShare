<div class="side-first-header">
  <div class="side-first">
    <%= link_to "マイページ",  root_path, class: 'btn'%>
  </div>
  <div class="side-second">
    <div class="first-username">
      <%= link_to current_user.user_name, edit_user_path(current_user) %>
    </div>
    <div class="first-logout">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
    </div>
  </div>
</div>

<div class="side-second-header">
  <div class="second-create">
    <%= link_to "タスク作成", new_task_path, class: 'btn'%>
  </div>
  <div class="second-download">
    <a href="#">ダウンロード</a>
  </div>
</div>


<div class="side-main">
  <div class="side-title">
    [タスク一覧・編集]
  </div>
  <% @taskall.each do |task| %>
    <% if current_user.id == task.user_id %>
      <li class='title-list'>
        <%= link_to edit_task_path(task) do %>
        <div class='side-task'>
          <%= task.title %>
        </div>
        <% end %>
      </li>
    <% else %>
    <% end %>
  <% end %>
</div>